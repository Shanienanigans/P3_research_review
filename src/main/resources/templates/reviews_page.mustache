<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header}}

<body>

    {{> fragments/top_bar}}

    <main class="page-main">

        <!-- MATCHES all other pages -->
        <section class="page-card">

            <h2 class="section-title">Reviews</h2>

            {{#reviews}}
                <div class="review-card"
                     style="background:#fafafa; border:1px solid #eee; border-radius:8px; padding:18px; margin-bottom:18px;">

                    <p>
                        <strong>Reviewer:</strong>
                        {{reviewer.firstName}} {{reviewer.lastName}}
                    </p>

                    <p><strong>Overall Score:</strong> {{overallScore}} / 5</p>
                    <p><strong>Confidence:</strong> {{confidence}}</p>
                    <p><strong>Verdict:</strong> {{verdict}}</p>

                    <p style="margin-top:10px;">
                        <strong>Feedback:</strong><br>
                        {{feedback}}
                    </p>

                    <!-- Optional criteria -->
                    {{#criteriaScores}}
                        <div style="margin-top:10px;">
                            <strong>{{criterionName}}:</strong> {{score}} / 5
                        </div>
                    {{/criteriaScores}}

                </div>
            {{/reviews}}

            {{^reviews}}
                <p style="color:#777;">No reviews yet.</p>
            {{/reviews}}

            <a href="/papers/{{paperId}}" class="link" style="display:inline-block; margin-top:14px;">
                â¬… Back to paper
            </a>

        </section>

    </main>

    {{> fragments/footer}}

</body>
</html>
