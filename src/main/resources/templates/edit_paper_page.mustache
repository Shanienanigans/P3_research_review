<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header}}

<body>

    {{> fragments/top_bar}}

    <main class="page-main">
        <section class="page-card">

            <h1 class="page-title">Edit Paper</h1>
            <p class="page-subtitle">
                Update the title, authors, abstract, or upload a new PDF file.
            </p>

            {{> fragments/error_message}}

            <form method="post"
                  action="/papers/{{paper.paperId}}/edit"
                  enctype="multipart/form-data"
                  class="paper-form">

                <div class="form-group">
                    <label for="title">Title</label>
                    <input id="title"
                           name="title"
                           type="text"
                           value="{{paper.title}}"
                           required>
                </div>

                <div class="form-group">
                    <label for="authors">Authors</label>
                    <input id="authors"
                           name="authors"
                           type="text"
                           value="{{paper.authors}}"
                           required>
                </div>

                <div class="form-group">
                    <label for="abstract">Abstract</label>
                    <textarea id="abstract"
                              name="abstract"
                              rows="6"
                              required>{{paper.abstractText}}</textarea>
                </div>

                <div class="form-group">
                    <label for="file">PDF file (optional)</label>
                    <input id="file"
                           name="file"
                           type="file"
                           accept="application/pdf">
                    <p style="color:#777; font-size:13px; margin-top:4px;">
                        Leave this empty if you don't want to change the current PDF.
                    </p>
                </div>

                <div style="margin-top:20px;">
                    <button type="submit" class="btn-primary">Save Changes</button>
                    <a href="/papers/{{paper.paperId}}" class="btn-view" style="margin-left:8px;">
                        Cancel
                    </a>
                </div>

            </form>

        </section>
    </main>

    {{> fragments/footer}}

</body>
</html>
