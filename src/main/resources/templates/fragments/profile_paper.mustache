<div class="paper-card">

    <!-- Thumbnail -->
    <img src="/paper_thumbs/{{thumbnail}}"
         class="paper-thumb"
         alt="Paper thumbnail">

    <div class="paper-content">

        <!-- Title -->
        <h3 class="paper-title">
            <a href="/papers/{{paperId}}">{{title}}</a>
        </h3>

        <!-- Abstract snippet -->
        <p class="paper-abstract">
            {{abstractSnippet}}
        </p>

        <!-- Meta info -->
        <div class="paper-meta">

            <span class="paper-author">
                <i class="fas fa-user" style="margin-right:4px;"></i>
                {{uploader.firstName}} {{uploader.lastName}}
            </span>

            <span class="paper-date" style="margin-left:12px;">
                <i class="far fa-calendar-alt" style="margin-right:4px;"></i>
                {{uploadDate}}
            </span>

            <span class="paper-score" style="margin-left:12px;">
                <i class="fas fa-star" style="margin-right:4px; color:#f4c150;"></i>
                {{avgScore}}
            </span>

            <span class="paper-reviews" style="margin-left:12px;">
                <i class="fas fa-comment" style="margin-right:4px;"></i>
                Reviews: {{reviewCount}}
            </span>

        </div>

        

        <!-- Buttons -->
        <div class="paper-actions">
            <!-- 查看论文 -->
            <a href="/papers/{{paperId}}" class="btn-view">View Paper</a>

            <a href="/discussion/{{paperId}}" class="btn-review">Join Discussion</a>
            <!-- Profile 页面里的论文都是当前用户上传的，允许编辑 -->
            <a href="/papers/{{paperId}}/edit" class="btn-secondary">
                Edit
            </a>
        </div>


    </div>
</div>
