<div class="discussion-threads">

    {{#comments}}
        {{> fragments/discussion_comment}}
    {{/comments}}

    {{^comments}}
        <p style="color:#777;">No discussions yet.</p>
    {{/comments}}

    <!-- New top-level comment -->
    <form method="post" action="/discussion/{{paperId}}/add">
        <input type="hidden" name="parentCommentId" value="">
        <input class="short-input full" type="text" name="comment"
               placeholder="Start a new discussion..." required>
    </form>

</div>
